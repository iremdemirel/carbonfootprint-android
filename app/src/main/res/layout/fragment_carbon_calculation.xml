                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:layout_marginTop="20dp"
                        android:background="@color/darkgreen"
                        android:text="Yolculuk"
                        android:textSize="18sp"
