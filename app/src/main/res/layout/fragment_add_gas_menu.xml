<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">


        <Button
            android:id="@+id/btn_billDateFrom"
            android:layout_width="70dp"
            android:layout_height="42dp"
            android:layout_marginTop="15dp"
            android:text="from"/>

        <TextView
            android:id="@+id/txt_billDateFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:layout_alignTop="@+id/btn_billDateFrom"
            android:layout_marginTop="15dp"
            android:text="date_placeholder"
            android:layout_marginLeft="50dp" />


        <Button
            android:id="@+id/btn_billDateTo"
            android:layout_width="70dp"
            android:layout_height="42dp"
            android:layout_marginTop="60dp"
            android:text="to" />

        <TextView
            android:id="@+id/txt_billDateTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginStart="110dp"
            android:text="date placeholder"
            android:layout_marginLeft="110dp" />


        <EditText
            android:id="@+id/edit_utilityPeople"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:ems="10"
            android:inputType="number" />



        <TextView
            android:id="@+id/txt_utilityPeople"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:text="number_of_people" />

        <EditText
            android:id="@+id/edit_utilityAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginTop="180dp"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/txt_utilityAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="220dp"
            android:text="amount_used_in_Kwh"/>

        <TextView
            android:id="@+id/action_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="280dp"
            android:text="OK"
            android:textColor="#33bbff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/action_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="280dp"
            android:layout_marginRight="20dp"
            android:text="CANCEL"
            android:textColor="#33bbff"
            android:textSize="18sp" />
    </RelativeLayout>

</RelativeLayout>